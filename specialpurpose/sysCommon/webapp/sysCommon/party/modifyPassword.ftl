<div style="margin-top:20px;">
	<form id="modifyPasswordForm" action="modifyCurrentUserPassword">
		<table width="100%">
			<tr class="background_tr">
				<td width="40%" align="right" class="label textColumn">
					旧密码：
				</td>
				<td class="valueColumn">
					<input id="password" name="password" type="password"/>
				</td>
			</tr>
			<tr>
				<td width="30%" align="right" class="label textColumn">
					新密码：
				</td>
				<td class="valueColumn">
					<input id="newPassword" name="newPassword" type="password"/>
				</td>
			</tr>
			<tr class="background_tr">
				<td width="30%" align="right" class="label textColumn">
					确认新密码：
				</td>
				<td class="valueColumn">
					<input id="newPasswordVerify" name="newPasswordVerify" type="password"/>
				</td>
			</tr>
		</table>
	</form>
</div>